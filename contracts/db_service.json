{
  "openapi": "3.0.0",
  "info": {
    "title": "Database Service API",
    "version": "0.1.0",
    "description": "Database introspection and management API"
  },
  "servers": [
    {
      "url": "http://localhost:8001",
      "description": "Local development server"
    }
  ],
  "security": [
    {
      "ServiceToken": []
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "security": [],
        "responses": {
          "200": {
            "description": "Service is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {"type": "string"},
                    "service": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tables": {
      "get": {
        "summary": "Get database tables information",
        "responses": {
          "200": {
            "description": "Table information",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "tables": {"type": "object"},
                    "models": {"type": "array", "items": {"type": "string"}},
                    "count": {"type": "integer"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/model/{model_name}/schema": {
      "get": {
        "summary": "Get model schema",
        "parameters": [
          {
            "name": "model_name",
            "in": "path",
            "required": true,
            "schema": {"type": "string"}
          }
        ],
        "responses": {
          "200": {
            "description": "Model schema",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {"type": "string"},
                    "fields": {"type": "object"},
                    "relationships": {"type": "array", "items": {"type": "string"}},
                    "table_name": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/query": {
      "post": {
        "summary": "Execute database query",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "model": {"type": "string"},
                  "operation": {"type": "string"},
                  "data": {"type": "object"}
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Query result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {"type": "array"},
                    "message": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/feed-assignment": {
      "post": {
        "summary": "Create or update feed assignment with deduplication",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["feed_url", "channel_id", "assigned_by_user_id"],
                "properties": {
                  "feed_url": {"type": "string", "description": "RSS feed URL"},
                  "channel_id": {"type": "integer", "description": "Target channel ID"},
                  "assigned_by_user_id": {"type": "integer", "description": "User creating assignment"},
                  "style_id": {"type": "integer", "description": "Style for formatting"},
                  "custom_config": {
                    "type": "object",
                    "properties": {
                      "daily_limit": {"type": "integer"},
                      "monthly_limit": {"type": "integer"},
                      "check_interval": {"type": "integer"}
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Feed assignment created or updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "canonical_feed_id": {"type": "integer"},
                    "assignment_id": {"type": "integer"},
                    "created": {"type": "boolean"},
                    "feed_url_normalized": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/feeds/canonical": {
      "get": {
        "summary": "List canonical feeds with deduplication info",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "schema": {"type": "integer", "default": 100}
          }
        ],
        "responses": {
          "200": {
            "description": "List of canonical feeds",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "feeds": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {"type": "integer"},
                          "url": {"type": "string"},
                          "normalized_url": {"type": "string"},
                          "title": {"type": "string"},
                          "assignment_count": {"type": "integer"},
                          "channel_count": {"type": "integer"},
                          "last_checked": {"type": "string", "format": "date-time"}
                        }
                      }
                    },
                    "total": {"type": "integer"}
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "ServiceToken": {
        "type": "apiKey",
        "in": "header",
        "name": "X-Service-Token"
      }
    }
  }
}