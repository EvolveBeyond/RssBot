{
  "openapi": "3.0.0",
  "info": {
    "title": "Formatting Service API",
    "version": "0.1.0",
    "description": "Content formatting and transformation API"
  },
  "servers": [
    {
      "url": "http://localhost:8006",
      "description": "Local development server"
    }
  ],
  "security": [
    {
      "ServiceToken": []
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "security": [],
        "responses": {
          "200": {
            "description": "Service is healthy"
          }
        }
      }
    },
    "/format": {
      "post": {
        "summary": "Format content",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["feed_id", "raw_content", "channel_profile"],
                "properties": {
                  "feed_id": {"type": "string"},
                  "raw_content": {"type": "string"},
                  "channel_profile": {
                    "type": "object",
                    "properties": {
                      "id": {"type": "integer"},
                      "formatting_style": {"type": "string"}
                    }
                  },
                  "custom_style": {"type": "string"}
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Formatted content",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "formatted_text": {"type": "string"},
                    "metadata": {"type": "object"},
                    "tags": {"type": "array", "items": {"type": "string"}},
                    "processing_time": {"type": "number"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/jobs/submit": {
      "post": {
        "summary": "Submit formatting job",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["requests"],
                "properties": {
                  "requests": {
                    "type": "array",
                    "items": {"$ref": "#/components/schemas/FormatRequest"}
                  },
                  "callback_url": {"type": "string"}
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Job submitted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "job_id": {"type": "string"},
                    "status": {"type": "string"},
                    "total_items": {"type": "integer"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/jobs/{job_id}": {
      "get": {
        "summary": "Get job status",
        "parameters": [
          {
            "name": "job_id",
            "in": "path",
            "required": true,
            "schema": {"type": "string"}
          }
        ],
        "responses": {
          "200": {
            "description": "Job status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "job_id": {"type": "string"},
                    "status": {"type": "string"},
                    "progress": {"type": "integer"},
                    "total": {"type": "integer"},
                    "results": {"type": "array"},
                    "error": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "FormatRequest": {
        "type": "object",
        "required": ["feed_id", "raw_content", "channel_profile"],
        "properties": {
          "feed_id": {"type": "string"},
          "raw_content": {"type": "string"},
          "channel_profile": {"type": "object"},
          "custom_style": {"type": "string"}
        }
      }
    },
    "securitySchemes": {
      "ServiceToken": {
        "type": "apiKey",
        "in": "header",
        "name": "X-Service-Token"
      }
    }
  }
}